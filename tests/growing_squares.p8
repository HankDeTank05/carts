function _init()
	
	x=x_upper_bound
	x_old=x
	
	x_wait=get_distance_at_x(x)
end

function _update60()
	
	x_wait-=1
	
	x_old=x
	
	if(x_wait<=0)then
		x-=1
	end
	
	if(x<0)then
		x=x_upper_bound
	end
	
	if(x!=x_old)then
		x_wait=get_distance_at_x(x)
	end

end

function _draw()
	cls()
	for x1=63,0,-5 do
		draw_centered_square(x)
	end
end
