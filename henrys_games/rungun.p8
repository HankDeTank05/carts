function init_floor()
	floor={}
	
	floor.x_lobound=-8
	floor.x_start=0
	floor.x_hibound=0
end

function update_floor()
	floor.x_start-=1
	if(floor.x_start<floor.x_lobound)then
		floor.x_start=floor.x_hibound
	end
end

function draw_floor()
	for x=floor.x_start,127,8 do
		spr(2,x,96)
	end
end
