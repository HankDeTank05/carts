--tab 1: update functions

function update_game()
	--read inputs and move player
	--token-optimized!
	for b=0,3 do
		if btnp(b) then
			moveplayer(dirx[b+1],
			           diry[b+1])
			return
		end
	end
end

function update_pturn()
	--what happens during the
	--player's turn
	
	--clamp the timer, always <=1
	p_t=min(p_t+0.125,1)
	
	p_move()
	
	--if anim is done...
	if p_t==1 then
		_update_state=update_game
	end
	
end

function update_gameover()
end

function move_walk()
	--player moves smoothly from
	--one tile to the next
	p_xoff=p_start_xoff*(1-p_t)
	p_yoff=p_start_yoff*(1-p_t)
end

function move_bump()
	--player bumps into a tile
	--and then moves back
	local tmr=p_t
	
	if p_t>0.5 then
		tmr=1-p_t
	end
	
	p_xoff=p_start_xoff*tmr
	p_yoff=p_start_yoff*tmr
end
