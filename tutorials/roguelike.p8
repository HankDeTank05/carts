--tab 4: gameplay

function moveplayer(dx,dy)
	local dest_x=p_x+dx
	local dest_y=p_y+dy
	local tile=mget(dest_x,dest_y)
	
	--change player facing dir,
	--if necessary
	if dx<0 then
		p_flip=true
	elseif dx>0 then
		p_flip=false
	end
	
	if fget(tile,0) then
		--you've hit a wall (ouch!)
		p_start_xoff=dx*8
		p_start_yoff=dy*8
		p_xoff=0
		p_yoff=0
		p_t=0
		_update_state=update_pturn
		p_move=move_bump
		
		--if interactible...
		if fget(tile,1) then
			triggerbump(tile,dest_x,dest_y)
		end
	else
		--no wall, proceed!
		p_x+=dx
		p_y+=dy
		p_start_xoff=dx*-8
		p_start_yoff=dy*-8
		p_xoff=p_start_xoff
		p_yoff=p_start_yoff
		p_t=0
		_update_state=update_pturn
		p_move=move_walk
	end
end

function triggerbump(tile,dest_x,dest_y)
	if tile==7 or tile==8 then
		--vases
		mset(dest_x,dest_y,1)
	elseif tile==10 or tile==12 then
		--chests
		mset(dest_x,dest_y,tile-1)
	elseif tile==13 then
		--door
		mset(dest_x,dest_y,1)
	end
end
