--tab 1: update functions

function update_game()
	--read inputs and move player
	--token-optimized!
	for b=0,3 do
		if btnp(b) then
			local dx=dirx[b+1]
			local dy=diry[b+1]
			p_x+=dx
			p_y+=dy
			p_xoff=dx*-8
			p_yoff=dy*-8
			_update_state=update_pturn
		end
	end
end

function update_pturn()
	--what happens during the
	--player's turn
	
	if p_xoff>0 then
		p_xoff-=1
	elseif p_xoff<0 then
		p_xoff+=1
	end
	
	if p_yoff>0 then
		p_yoff-=1
	elseif p_yoff<0 then
		p_yoff+=1
	end
	
	if p_xoff==0 and p_yoff==0 then
		_update_state=update_game
	end
end

function update_gameover()
end
