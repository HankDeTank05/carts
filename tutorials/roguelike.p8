--tab 2: draw functions

function draw_game()
	cls()
	map()
	
	--draw player
	drawspr(getframe(p_anim),
	        p_x*8+p_xoff,
	        p_y*8+p_yoff,
	        10,
	        p_flip)
end

function draw_gameover()
end
