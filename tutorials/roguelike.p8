--lazy devs roguelike tutorial

function _init()
	t=0 --frame count
	p_anim={240,241,242,243}
	
	--     0  1  2  3
	--    ⬅️ ➡️ ⬆️ ⬇️
	--     l  r  u  d
	dirx={-1, 1, 0, 0}
	diry={ 0, 0,-1, 1}
	
	_update_state=update_game
	_draw_state=draw_game
	start_game()
end

function _update()
	t+=1
	_update_state()
end

function _draw()
	_draw_state()
end

function start_game()
	p_x=3--player x-pos (map x)
	p_y=5--player y-pos (map y)
	p_xoff=0--x-offset, for smooth movement between map tiles
	p_yoff=0--y-offset, for smooth movement between map tiles
end
